<div class="l-search__sidebar">
	<div class="l-search__sidebar-sticky">
		<div class="l-search__sidebar-block last">
			<h5 class="m-search-label">Tags</h5>
            {{#get "tags" limit="10" include="count.posts" order="count.posts desc"}}
                <div class="tag-cloud">
                    {{#foreach tags}}<a href="{{url}}">{{name}}</a>{{/foreach}}
                </div>
            {{/get}}
		</div>
	</div>
</div>