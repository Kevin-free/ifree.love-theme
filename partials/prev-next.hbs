<div class="prev-next-wrap">
    <div class="prev-next-content">
        <div class="container-fluid">
            <div class="row">
                {{#prev_post}}
                <div class="col-lg-6 post-wrap ml-auto mr-auto">
                    <span class="nav-text">{{t "Previous Post"}}</span>
                    {{#if feature_image}}
                    <div class="featured-image">
                        <a href="{{url}}"><img src="{{img_url feature_image size="s"}}" alt="{{title}}"></a>
                    </div>
                    {{/if}}
                    <div class="post-content">
                        {{#primary_tag}}
                        <div class="primary-tag">
                            <a href="{{url}}">{{name}}</a>
                        </div>
                        {{/primary_tag}}
                        <h3 class="title h4"><a href="{{url}}">{{title}}</a></h3>
                    </div>
                </div>
                {{/prev_post}}
                {{#next_post}}
                <div class="col-lg-6 post-wrap ml-auto mr-auto">
                    <span class="nav-text">{{t "Next Post"}}</span>
                    {{#if feature_image}}
                    <div class="featured-image">
                        <a href="{{url}}"><img src="{{img_url feature_image size="s"}}" alt="{{title}}"></a>
                    </div>
                    {{/if}}
                    <div class="post-content">
                        {{#primary_tag}}
                        <div class="primary-tag">
                            <a href="{{url}}">{{name}}</a>
                        </div>
                        {{/primary_tag}}
                        <h3 class="title h4"><a href="{{url}}">{{title}}</a></h3>
                    </div>
                </div>
                {{/next_post}}
            </div>           
        </div>
    </div>
</div>